<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="100dp" />
            <stroke android:width="2dp" android:color="@color/white"/>
            <solid android:color="#cbd0d8"/>
            <gradient android:angle="180" android:startColor="@color/black" android:endColor="@color/white"/>
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape android:shape="rectangle">
            <corners android:radius="100dp" />
            <stroke android:width="3dp" android:color="@color/white"/>
            <solid android:color="@color/white"/>
            <gradient android:angle="180" android:startColor="@color/white" android:endColor="@color/white"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="100dp" />
            <stroke android:width="4dp" android:color="@color/white"/>
            <gradient android:angle="180" android:startColor="@color/white" android:endColor="@color/white"/>


        </shape>
    </item>
</selector>

